
<h2 align= "center"> Title: <%= @assignment.title %> </h2>

<div class="well col xs-8 col-xs-offset-0">
  <h4 class="center description"><strong>Description</strong></h4>
<hr>
 <%= simple_format(@assignment.description) %>

<div class="assignment-action"></div>

<%= link_to "Edit", edit_assignment_path(@assignment), class: "btn btn-xs btn-primary" %>
<%= link_to "Destroy", assignment_path(@assignment), method: :delete,
                                         data: { confirm: "Are you sure you want to delete?"}, 
                                         class:"btn btn-xs  btn-danger" %>
<%= link_to "View all assignments", assignments_path, class:"btn btn-xs btn-success" %>