<h1 align = "center"> listing of all assignments </h1>


<% @assignments.each do |f| %>
  <div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="well well-lg">
     <div class ="assignment-title">
      <%= link_to f.title, assignment_path(f) %>
      </div>
      <div class ="assignment-body">
  <%= truncate(f.description, length:10) %>
  </div>
  <div class="assignment-action">

<%= link_to "Edit", edit_assignment_path(f), class: "btn btn-xs btn-primary" %>
<%= link_to "Destroy", assignment_path(f), method: :delete,
                                         data: { confirm: "Are you sure you want to delete?"}, 
                                         class:"btn btn-xs  btn-danger" %>
                                         </div>
                                         </div>
                                         </div>
                                         </div>
   <% end %>
